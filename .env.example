# ============================================
# Application Settings
# ============================================
APP_NAME="Quiz LMS"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file
APP_TIMEZONE=Asia/Manila

BCRYPT_ROUNDS=12

# ============================================
# Logging Configuration
# ============================================
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# ============================================
# Database Configuration
# ============================================
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=quiz_lms
DB_USERNAME=root
DB_PASSWORD=

# ============================================
# Session & Cache Configuration
# ============================================
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

CACHE_STORE=database
CACHE_PREFIX=quizlms_cache

# ============================================
# Queue Configuration
# ============================================
QUEUE_CONNECTION=database

# ============================================
# Broadcast & Filesystem
# ============================================
BROADCAST_CONNECTION=log
FILESYSTEM_DISK=public

# ============================================
# Mail Configuration (Gmail SMTP)
# ============================================
MAIL_MAILER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=
MAIL_FROM_NAME="${APP_NAME}"

# ============================================
# OpenAI API Configuration
# ============================================
OPENAI_API_KEY=
OPENAI_ORGANIZATION=
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=4000
OPENAI_TEMPERATURE=0.7

# ============================================
# AI Feature Flags
# ============================================
AI_QUESTION_GENERATION_ENABLED=true
AI_QUESTION_VALIDATION_ENABLED=true
AI_ESSAY_GRADING_ENABLED=true
AI_ANALYTICS_ENABLED=true

# ============================================
# Redis Configuration (Optional)
# ============================================
REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# ============================================
# Memcached Configuration (Optional)
# ============================================
MEMCACHED_HOST=127.0.0.1

# ============================================
# AWS Configuration (Optional)
# ============================================
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# ============================================
# Pusher Configuration (Optional - for real-time)
# ============================================
PUSHER_APP_ID=
PUSHER_APP_KEY=
PUSHER_APP_SECRET=
PUSHER_APP_CLUSTER=mt1

# ============================================
# Vite Configuration
# ============================================
VITE_APP_NAME="${APP_NAME}"
VITE_PUSHER_APP_KEY="${PUSHER_APP_KEY}"
VITE_PUSHER_HOST="${PUSHER_HOST}"
VITE_PUSHER_PORT="${PUSHER_PORT}"
VITE_PUSHER_SCHEME="${PUSHER_SCHEME}"
VITE_PUSHER_APP_CLUSTER="${PUSHER_APP_CLUSTER}"

# ============================================
# Quiz LMS Specific Settings
# ============================================
# Default Academic Year
DEFAULT_ACADEMIC_YEAR=2024-2025
DEFAULT_SEMESTER=1st

# Quiz Settings
QUIZ_DEFAULT_TIME_LIMIT=60
QUIZ_DEFAULT_PASSING_SCORE=60
QUIZ_DEFAULT_MAX_ATTEMPTS=3

# File Upload Limits
MAX_LESSON_FILE_SIZE=10240
MAX_AVATAR_FILE_SIZE=2048
ALLOWED_LESSON_FILE_TYPES=pdf,doc,docx,ppt,pptx,txt

# Pagination
DEFAULT_PAGINATION=20
ADMIN_PAGINATION=50

# Security
PASSWORD_MIN_LENGTH=8
SESSION_LIFETIME_MINUTES=120
MAX_LOGIN_ATTEMPTS=5
LOGIN_THROTTLE_MINUTES=15

# Email Queue
SHOULD_QUEUE_EMAILS=true

# Audit Log Retention
AUDIT_LOG_RETENTION_DAYS=90

# System Settings
ALLOW_IMPERSONATION=false
MAINTENANCE_MODE=false
ENABLE_REGISTRATION=false

# ============================================
# Development Tools (Optional)
# ============================================
TELESCOPE_ENABLED=false
DEBUGBAR_ENABLED=false

# ============================================
# Backup Configuration (Optional)
# ============================================
BACKUP_DISK=local
BACKUP_NOTIFICATION_EMAIL=